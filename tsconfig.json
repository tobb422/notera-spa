{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es2016"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "contexts/*": [
        "contexts/*"
      ],
      "parts/*": [
        "components/parts/*"
      ],
      "services/*": [
        "services/*"
      ],
      "shared/*": [
        "shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "next.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
